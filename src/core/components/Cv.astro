---
import About from "@/core/components/sections/About.astro";
import Education from "@/core/components/sections/Education.astro";
import Experience from "@/core/components/sections/Experience.astro";
import Hero from "@/core/components/sections/Hero.astro";
import Projects from "@/core/components/sections/Projects.astro";
import Skills from "@/core/components/sections/Skills.astro";
import type { CV } from "@/cv";
import { i18n } from "@/core/i18n/config";
import { useTranslation, type Locale, type UI_CONTENT } from "@/core/i18n/utils";

interface Props {
    cv: CV;
}
const { lang } = Astro.params;
const { cv} = Astro.props;
const rContent = useTranslation(lang as Locale ?? i18n.defaultLocale);
---

<Hero basics={cv.basics} />
<About title={rContent.sections.about} basics={cv.basics} />
<Experience title={rContent.sections.experience} work={cv.work} />
<Projects title={rContent.sections.projects} projects={cv.projects} />
<Education title={rContent.sections.education} education={cv.education} />
<Skills title={rContent.sections.skills} skills={cv.skills} />